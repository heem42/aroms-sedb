<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout_LL"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/menu_layout_type"
        android:layout_width="match_parent"
        android:textAlignment="viewEnd"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:text="type" />

    <TextView
        android:id="@+id/menu_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:text="name of dish" />

    <TextView
        android:id="@+id/menu_layout_price"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prices: na/na" />

    <TextView
        android:id="@+id/menu_layout_time"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready in 20 minutes" />

</LinearLayout>